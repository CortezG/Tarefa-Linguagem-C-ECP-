#include <stdio.h>

int sopares() {
    int n, i;

    printf("Digite o tamanho da sequencia: ");
    scanf("%d", &n);

    int numeros[n];

    printf("entre com %d elementos", n);
    for (i = 0; i<n; i++){
        printf("\n%d:", i);
        scanf("%d", &numeros[i]);
    }
    printf("Pares: ");
    for ( i = 0; i<n ; i++){
        if (numeros[i] %2 == 0)
        {
            printf("%d ", numeros[i]);
        }    
    }
    printf("\n");
    return 0;
}

int main(){
    sopares();
}
